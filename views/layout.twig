{# Theme layout twig file #}
<!doctype html>
<html class="no-js" lang="{{ site.language }}">
<head>
    <meta charset="{{ site.charset }}">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,400i,700,700i&subset=latin-ext" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
    <link rel="stylesheet" media="all" href="{{ theme.path }}/assets/dist/css/styles.min.css">
    {{ wp_head }}
</head>
<body class="{{ body_class }}">
    <div class="container">
        {% include 'banner.twig' %}
        {% block sidebar %}{% endblock %}
        <main class="content" role="main">
            {% block content %}{% endblock %}
        </main><!-- .global__content -->
        {% include 'footer.twig' %}
        {{ wp_footer }}
    </div><!-- .container -->
    <script src="{{ theme.path }}/assets/dist/js/vendor.min.js" defer></script>
    <script src="{{ theme.path }}/assets/dist/js/global.min.js" defer></script>
</body>
</html>
