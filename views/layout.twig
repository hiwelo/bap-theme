{# Theme layout twig file #}
<!doctype html>
<html class="no-js" lang="{{ site.language }}">
<head>
    <meta charset="{{ site.charset }}">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {{ wp_head }}
</head>
<body class="{{ body_class }}">
    {% include 'banner.twig' %}
    <div class="container">
        {% block sidebar %}{% endblock %}
        <main class="content" role="main">
            {% block content %}{% endblock %}
        </main><!-- .global__content -->
        {% include 'footer.twig' %}
        {{ wp_footer }}
    </div><!-- .container -->
    <script src="{{ theme.path }}/assets/dist/js/vendor.min.js" defer></script>
    <script src="{{ theme.path }}/assets/dist/js/global.min.js" defer></script>
</body>
</html>
